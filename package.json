{
  "name": "schemafy",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && cd core && ./gradlew build",
    "infra": "podman compose up -d mariadb || true",
    "dev": "npm run infra && turbo run dev --parallel",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "infra:up": "podman compose up -d mariadb",
    "infra:down": "podman compose down",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
