{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=frontend",
    "build:backend": "cd apps/backend && ./gradlew build",
    "dev": "turbo run dev --filter=frontend",
    "dev:backend": "cd apps/backend && ./gradlew bootRun",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
